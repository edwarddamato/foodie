{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2015"]
    },
    "exclude": [
        "node_modules",
        "**/__tests__/**"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}
